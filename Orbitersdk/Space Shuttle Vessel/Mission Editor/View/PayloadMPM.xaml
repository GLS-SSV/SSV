<Window x:Class="SSVMissionEditor.PayloadMPM"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SSVMissionEditor"
        mc:Ignorable="d"
        Title="Payload MPM" Height="225" Width="460" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <Window.Background>
        <SolidColorBrush Color="#FFF9F9F9"/>
    </Window.Background>
    <Window.CommandBindings>
        <CommandBinding Command="Close" Executed="CommandBinding_Executed" />
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Key="Escape" Command="Close" />
    </Window.InputBindings>
    <Grid>
        <Label Content="Upper Pedestal Mesh" HorizontalAlignment="Left" Height="26" Margin="130,10,0,0" VerticalAlignment="Top" Width="220"/>
        <Label Content="MRL" HorizontalAlignment="Left" Height="26" Margin="359,10,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="Attachment" HorizontalAlignment="Left" Height="26" Margin="10,157,0,0" VerticalAlignment="Top" Width="112"/>

        <CheckBox x:Name="ckbShoulder" Content="Shoulder Pedestal" HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="ckbForward" Content="Forward Pedestal" HorizontalAlignment="Left" Margin="10,71,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="ckbMid" Content="Mid Pedestal" HorizontalAlignment="Left" Margin="10,98,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="ckbAft" Content="Aft Pedestal" HorizontalAlignment="Left" Margin="10,125,0,0" VerticalAlignment="Top"/>

        <TextBox x:Name="txtShoulderMesh" HorizontalAlignment="Left" Height="22" Margin="128,41,0,0" VerticalAlignment="Top" Width="225"/>
        <TextBox x:Name="txtForwardMesh" HorizontalAlignment="Left" Height="22" Margin="128,68,0,0" VerticalAlignment="Top" Width="225"/>
        <TextBox x:Name="txtMidMesh" HorizontalAlignment="Left" Height="22" Margin="128,95,0,0" VerticalAlignment="Top" Width="225"/>
        <TextBox x:Name="txtAftMesh" HorizontalAlignment="Left" Height="22" Margin="128,122,0,0" VerticalAlignment="Top" Width="225"/>

        <ComboBox x:Name="cmbShoulder" HorizontalAlignment="Left" Height="22" Margin="359,41,0,0" VerticalAlignment="Top" Width="75"/>
        <ComboBox x:Name="cmbForward" HorizontalAlignment="Left" Height="22" Margin="359,68,0,0" VerticalAlignment="Top" Width="75"/>
        <ComboBox x:Name="cmbMid" HorizontalAlignment="Left" Height="22" Margin="359,95,0,0" VerticalAlignment="Top" Width="75"/>
        <ComboBox x:Name="cmbAft" HorizontalAlignment="Left" Height="22" Margin="359,122,0,0" VerticalAlignment="Top" Width="75"/>
        
        <ComboBox x:Name="cmbAttachment" HorizontalAlignment="Left" Height="22" Margin="128,159,0,0" VerticalAlignment="Top" Width="100"/>

        <CheckBox x:Name="ckbHasPL" HorizontalAlignment="Left" Margin="294,163,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnPayload" Content="Edit Payload" HorizontalAlignment="Left" Height="25" Margin="321,157,0,0" VerticalAlignment="Top" Width="80" Click="btnPayload_Click"/>
    </Grid>
</Window>
